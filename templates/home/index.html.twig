{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        
    
        body {
            background-repeat: no-repeat;
            background-position: center center;
            background-attachment: fixed;
            background-size: cover;
        }

        .example-wrapper {
            background-image: url("{{ asset('images/back2.jpg') }}");
            margin:  auto;
            max-width: 1100px;
            height: 920px;
            padding: auto;
            border-radius: 0.7em;
            width: 95%;
            font: 18px/1.5 sans-serif;
            position: relative; /* ajout */
        }
        .example-wrapper:before,
        .example-wrapper:after {
            content: "";
            display: block;
            position: absolute;
            top: 0;
            bottom: 0;
            width: 20%;
            background-color: #e3f2fd; /* couleur des côtés */
            z-index: -1;
        }
        .example-wrapper:before {
            left: -20%;
            border-radius: 0 0.3em 0.3em 0;
        }
        .example-wrapper:after {
            right: -20%;
            border-radius: 0.3em 0 0 0.3em;
        }
        .container {
            padding: 12px;
            font-size: 18px;    
            font-family: 'verdana', sans-serif;
          }
          
          .container h1 {
            margin-top: 12px;
            text-align: left;
          }


        .navbar {
            margin-bottom: 0; /* pour que la navbar soit alignée avec example-wrapper */
        }

        .navbar-nav ul {
            border-radius: 0.5em;
        }
        .navbar-nav li.nav-item a.nav-link:hover {
            color: #E7EEF8;
            background-color: #2AA2E1;
            border-radius: 0.5em;

          }

        .navbar-nav li:not(:last-child) {
            margin-right: 20px;
        }
    </style>
{% endblock %}

{% block body %} 

<header>
    <img src="{{ asset('images/logo.png') }}" alt="Logo" width="210" height="110" class="float-start">
<div class="example-wrapper">
    <div class="container">
        <h1>MedSell</h1>
        <h3>Application de vente des produits médicaux </h3>
        {% if app.user %}
        <div class="md-3">
          Vous etes connecté en tant que {{ app.user.userIdentifier }}
        </div>
        {% endif %}
    </div>


<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd;">
    <div class="container-fluid">
        <a class="navbar-brand" href="#"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin') }}">Gestion des utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_clients_index') }}">Gestion de clients</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_products_index') }}">Gestion de produits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_orders') }}">Gestion des commandes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="text-center: right" href="{{ path('app_login', {'_target_path': path('app_logout')}) }}">Déconnexion</a>
                    </li>
            </ul>
        </div>
    </div>
</nav>   
