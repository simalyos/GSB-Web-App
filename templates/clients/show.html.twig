{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id_client</th>
                <td>{{ client.idClient }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ client.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary btn-sm" href="{{ path('app_clients_index') }}">back to list</a>

    <a class="btn btn-primary btn-sm mr-2" data-toggle="modal" href="{{ path('app_clients_edit', {'id_client': client.id_client}) }}">Modifier</a>

    <a class="btn btn-danger btn-sm" data-toggle="modal" href="{{ path('app_clients_delete', {'id_client': client.id_client}) }}">Supprimer</a>
{% endblock %}
